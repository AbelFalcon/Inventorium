datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  price       Float
  description String
  images      String
  creationAt  DateTime @default(now())
  updatedAt   DateTime @updatedAt
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
}

model Category {
  id         Int       @id @default(autoincrement())
  name       String
  image      String
  creationAt DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  products   Product[] // Relaci√≥n uno a muchos con productos
}
